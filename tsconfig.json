{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2020",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": "./",
    "incremental": true,
    "strictNullChecks": true,
    "paths": {
      "@app/*": ["src/*"]
    }
  },
  "exclude": ["node_modules", "tests", "dist", "**/*spec.ts"],
  "include": ["src"]
}
